---
import { getCategories } from "../data/helpers/postsData";

const categories = getCategories();
---

<div class="border-2 border-dark-principal dark:border-light-principal">
    <ul class="group relative">
        <li class="p-1 hover:bg-light-secundary dark:hover:bg-dark-secundary">Categor√≠as</li>
        <ul
            class="hidden group-focus-within:block group-hover:block absolute top-full -left-8 w-40 bg-light-principal dark:bg-dark-principal dark:text-light-principal border-2 border-dark-principal dark:border-light-principal"
        >
            {
                categories.map((category) => (
                    <li class="p-2 hover:bg-light-secundary dark:hover:bg-dark-secundary">
                        <a class="block w-full"
                            href={`/category/${category.toLowerCase().replace(/\s+/g, "-")}`}
                        >
                            {category}
                        </a>
                    </li>
                ))
            }
        </ul>
    </ul>
</div>
