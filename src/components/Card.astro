---
interface Props {
    title: string;
    description: string;
    date: string;
    categories: string[];
    heroImage: string;
    slug: string;
}

const { title, description, date, categories, heroImage, slug } = Astro.props;
---

<div
    class="max-w-md h-80 border-2 border-dark-secundary dark:border-light-secundary rounded-lg flex flex-col items-center bg-light-fourth dark:bg-dark-fourth"
>
    <section class="w-full flex flex-col">
        <a href=`post/${slug}` class="w-full flex justify-center items-center">
            <img
                src={heroImage}
                alt=`image of ${title}`
                class="mt-3 rounded-lg w-11/12 h-45 object-cover mx-auto"
            />
        </a>

        <div class="mx-4 flex justify-between items-center">
            <p class="text-xs">{date}</p>
            <div>
                {
                    categories.map((category) => (
                        <a
                            href={`/category/${category.toLowerCase().replace(/\s+/g, "-")}`}
                            class="text-xs cursor-pointer ml-2"
                        >
                            {category}
                        </a>
                    ))
                }
            </div>
        </div>
    </section>
    <section class="w-11/12 mt-1 flex justify-between items-center font-bold">
        <a href=`post/${slug}`><h1 class="text-lg">{title}</h1></a>
    </section>
    <section class="w-11/12 mt-1 flex justify-between items-center">
        <h1 class="text-sm line-clamp-3 overflow-hidden text-ellipsis">
            {description}
        </h1>
    </section>
</div>
